# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 2
        color_good = "#b5bd68"
        color_degraded = "#f0c674"
        color_bad = "#cc6666"
        color_separator = "#c5c8c6"
}

# order += "ipv6"
# order += "disk /"
# order += "run_watch DHCP"
# order += "run_watch VPN"
order += "ethernet enp0s25"
order += "wireless wlo1"
order += "volume master"
order += "cpu_temperature 0"
order += "battery 0"
#order += "battery 1"
# order += "load"
order += "time"

ethernet enp0s25 {
        format_up = "%ip"
        format_down = "ethernet down"
}

wireless wlo1 {
        format_up = "%essid: %quality"
        format_down = "wifi down"
}

battery 0 {
        integer_battery_capacity = true
        low_threshold = 10
        threshold_type = percentage
        format = "Internal: %percentage"
}

battery 1 {
        integer_battery_capacity = true
        format = "External: %percentage"
}

cpu_temperature 0 {
}

time {
        format = "%Y-%m-%d %H:%M"
}

volume master {
       format = "Vol: %volume"
       mixer = "Master"
       mixer_idx = 0
}
